<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cryptobot</title>
    <style>
        #bot {
            background: url('./bg.jpg') no-repeat center center;
            -webkit-background-size: cover;
            -moz-background-size: cover;
            -o-background-size: cover;
            background-size: cover;

            position: fixed;
            top: 0;
            left: 0;
            min-width: 100%;
            min-height: 100%;
        }

        model-viewer {
            height: 100vh;
            width: 100vw;
        }
    </style>
</head>

<body>
    <div id="bot">
        <model-viewer id="cryptobot" src="<%= token.Bot3dModelURI %>" alt="cryptobot" scale="0.8 0.8 0.8">
        </model-viewer>
    </div>

</body>
<script>
    function canvasToImg() {
        const canvas = document.querySelector("model-viewer#cryptobot")
        const cryptobotimage = canvas.toDataURL('image/png');
        console.log(cryptobotimage)
        const botImage = document.querySelector("#botimage");
        botImage.src = cryptobotimage;
    }
</script>
<script type="module" src="https://unpkg.com/@google/model-viewer/dist/model-viewer.min.js"></script>

</html>